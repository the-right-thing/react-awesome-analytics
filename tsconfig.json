{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "es6",
    "jsx": "react",
    "esModuleInterop": true,
    "rootDirs": ["src", "stories"],
    "baseUrl": "src"
  },
  "compileOnSave": false,
  "buildOnSave": false,
  "include": ["src/**/*", "stories/**/*" ]
}